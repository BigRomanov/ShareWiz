{
  "manifest_version": 2,

  "name": "ShareWiz",
  "description": "Sharing Wizdom",
  "version": "1.0",

  "permissions": [
    "contextMenus",
    "*://*/*"
  ],
  "background": {
    "persistent": false,
    "scripts": ["contextMenu.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16":"icon.png",
    "48":"icon.png",
    "128":"icon.png"
  }
}